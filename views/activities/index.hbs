<h1>Activities</h1>
<div class="row">
    {{#each activiti}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{body}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/activities/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/activities/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No activitis to display</p>
    {{/each}}
</div>