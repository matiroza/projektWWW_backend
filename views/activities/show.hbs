<div class="row">
    <div class="col s12 m8">
        <h3>{{activiti.title}}
            <h6>{{activiti.user.createdAt}}</h6>
        </h3>
        <div class="card story">
            <div class="card-content">
                {{{activiti.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{activiti.user.displayName}}</span>
                <img src="{{activiti.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/activities/user/{{activiti.user._id}}">More From {{activiti.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>